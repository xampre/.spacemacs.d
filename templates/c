#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
`
(let ((header
        (concat (file-name-sans-extension (file-name-nondirectory (buffer-file-name))) ".h"))
       (fmt "#include \"%s\"") )
  (if (file-exists-p header)
      (format fmt header)
    (format (concat "/* " fmt " */") header) ))
`

